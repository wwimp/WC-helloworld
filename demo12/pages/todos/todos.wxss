.empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.empty .title {
    font-size: 60rpx;
    margin: 200rpx 50rpx 50rpx;
    color: #444;
}

.empty .content {
    color: #666;
    text-align: center;
}
