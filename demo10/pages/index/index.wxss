  page {
    height: 100%;
  }

  .root {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: #ccc;
  }

  .tabs {
    background-color: #f0e;
    display: flex;
  }

  .tabs .item {
    flex: 1;
    text-align: center;
    background-color: #000;
    color: #ccc;
    font-size: 12px;
    padding: 8px 0;
  }

  .tabs .item.active {
    color: #fff;
    border-bottom: 2px solid #e9232c;
  }

  .content {
    flex: 1;
    background-color: #000;
    color: #ccc;
    overflow: hidden;
  }

  .slide .item {
    width: 100%;
    height: 130px;
  }

  .slide .item image {
    width: 100%;
    height: 100%;
  }

  .portals {
    display: flex;
    margin-bottom: 10px;
  }

  .portals .item {
    flex: 1;
  }

  .portals .item image {
    width: 60px;
    height: 60px;
    display: block;
    margin: 10px auto;
  }

  .portals .item text {
    font-size: 12px;
    display: block;
    text-align: center;
  }

  .list {
    color: #ccc;
  }

  .list .title {
    margin: 5px 10px;
    font-size: 14px;
  }

  .list .inner {
    display: flex;
    flex-wrap: wrap;
  }

  .list .inner .item {
    width: 33.33333333333%;
  }

  .list .inner .item image {
    display: block;
    width: 120px;
    height: 120px;
    margin: 0 auto;
  }

  .list .inner .item text {
    font-size: 14px;
    margin-left: 5px;
  }


  .player {
    display: flex;
    /* height: 50px; */
    background-color: #111;

  }

  .poster image {
    width: 40px;
    height: 40px;
    margin: 5px;
  }

  .info {
    flex: 1;
    color: #999;
    font-size: 14px;
    margin: 5px;
  }

  .info .title {
    display: block;
    font-size: 16px;
    color: #ccc;
  }

  .info .artist {
    font-size: 13px;
  }

  .controls image {
    width: 40px;
    height: 40px;
    margin: 5px 2px;
  }